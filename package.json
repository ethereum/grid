{
  "name": "grid",
  "version": "1.5.2",
  "description": "Ethereum Grid",
  "main": "nano.js",
  "homepage": "https://github.com/ethereum/grid",
  "author": "Grid Team <grid@ethereum.org>",
  "license": "ISC",
  "repository": "https://github.com/ethereum/grid",
  "scripts": {
    "start:prod": "cross-env NODE_ENV=production electron .",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "start": "yarn start:dev",
    "start:dev:verbose": "cross-env NODE_ENV=development DEBUG=geth-js electron .",
    "test:mocha": "cross-env NODE_ENV=test mocha ./test",
    "test:e2e": "cross-env NODE_ENV=development ava ./test/e2e --verbose -s",
    "test:integration:watch": "cross-env NODE_ENV=test mocha ./test/integration --watch",
    "test:integration:parity": "cross-env NODE_ENV=test mocha ./test/integration/parity.test.js",
    "test:integration:geth": "cross-env NODE_ENV=test mocha ./test/integration/geth.test.js",
    "prepare-release": "node ./scripts/copyApp.js",
    "dist": "yarn run prepare-release && electron-builder",
    "release": "env-cmd .env yarn run dist"
  },
  "dependencies": {
    "@philipplgh/electron-app-manager": "^0.45.0",
    "auto-launch": "^5.0.5",
    "debug": "^4.1.1",
    "menubar": "^6.0.7",
    "xterm": "^3.14.4"
  },
  "peerDependencies": {},
  "devDependencies": {
    "ava": "^1.4.1",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "electron": "6.0.4",
    "electron-builder": "21.2.0",
    "electron-rebuild": "^1.8.6",
    "env-cmd": "^8.0.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "mocha": "^5.2.0",
    "prettier": "^1.16.4",
    "ps-list": "^6.3.0",
    "rimraf": "^2.6.3",
    "spectron": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css}": [
      "prettier --no-semi --single-quote --write",
      "git add"
    ]
  },
  "build": {
    "productName": "Grid",
    "appId": "org.ethereum.grid",
    "asar": false,
    "files": [
      "index.js",
      "nano.js",
      "electron-shell.js",
      "electron-zip-support.js",
      "preload.js",
      "preload-webview.js",
      "WindowManager.js",
      "build/**/*.png",
      "build/**/*.ico",
      "ui/download-splash.html",
      "ui/json-editor.html",
      "ui/nano.html",
      "ui/terminal.html",
      "public/error.html",
      "Menu.js",
      "Config.js",
      "Rpc.js",
      "ethereum_clients/**/*.js",
      "ethereum_clients/**/*.json",
      "grid_apps/**/*.js",
      "grid_apps/**/*.json",
      "utils/**/*.js",
      "*.asar",
      "*.zip",
      "shipped-grid-ui/**/*.zip"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "WebBrowser"
    },
    "directories": {
      "output": "release"
    }
  }
}
